{
    "compileOnSave": true,
    "compilerOptions": {
        "newLine": "LF",
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2020",
            "DOM"
        ],
        "declaration": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "vueCompilerOptions": {
        "globalTypesPath": "./node_modules/vue/dist/vue.d.globalTypesPath"
    },
}
